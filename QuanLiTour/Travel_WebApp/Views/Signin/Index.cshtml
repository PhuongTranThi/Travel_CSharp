@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout_1.cshtml";
}
<form style="width : 400px" action="/signin/create" method="post">
    <div class="form-group">
      <label for="username">Tên đăng nhập:</label>
      <input type="text" class="form-control" id="username" placeholder="Enter email" name="username">
    </div>
    <div class="form-group">
      <label for="pwd">Mật khẩu:</label>
      <input type="password" class="form-control" id="pwd" placeholder="Enter password" name="pwd">
    </div>
    <div class="form-group">
      <label for="pwd">Họ:</label>
      <input type="text" class="form-control" id="ho" placeholder="Họ" name="pwd">
    </div>
    <div class="form-group">
      <label for="pwd">Tên:</label>
      <input type="text" class="form-control" id="ten" placeholder="Tên" name="pwd">
    </div>
    <div class="form-group">
      <label for="pwd">Giới tính:</label>
      <input type="text" class="form-control" id="goitinh" placeholder="giới tính" name="pwd">
    </div>
    <div class="checkbox">
      <label><input type="checkbox" name="remember"> Remember me</label>
    </div>
    <div style ="padding-left : 150px">
        <button type="submit" class="btn btn-default" >Đăng kí</button>
    </div>
  </form>